{
  "name": "ciao-prolog",
  "displayName": "Ciao Prolog",
  "description": "Run interpreter for ciao-prolog form vscode",
  "publisher": "MarcoPerezGonzalez",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.73.0"
  },
  "icon": "images/icon.png",
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onCommand:ciao-prolog.run"
  ],
  "author": {
    "name": "Marco Perez Gonzalez",
    "email": "marco@marcopg.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/marcoperg/ciao-lang-vscode-extension"
  },
  "bugs": {
    "url": "https://github.com/marcoperg/ciao-lang-vscode-extension/issues",
    "email": "marco@marcopg.com"
  },
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ciao-prolog.run",
        "when": "resourceLangId == prolog",
        "title": "Run with ciao",
        "group": "navigation@1",
        "icon": "$(play)"
      }
    ],
    "menus": {
      "editor/title/run": [
        {
          "command": "ciao-prolog.run",
          "title": "Run file with ciao",
          "when": "resourceExtname == .pl"
        }
      ]
    },
    "languages": [
      {
        "id": "ciao",
        "aliases": [
          "Ciao",
          "ciao",
          "Ciao-prolog",
          "ciao-prolog"
        ],
        "extensions": [
          "pl"
        ],
        "icon": {
          "light": "./images/icon.png",
          "dark": "./images/icon.png"
        },
        "configuration": "./ciao-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "ciao",
        "scopeName": "source.ciao",
        "path": "./syntaxes/ciao.tmLanguage"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.73.0",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.26.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "ts-loader": "^9.4.1",
    "typescript": "^4.9.3",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  }
}